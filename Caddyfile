localhost:80 {
    proxy /api localhost:8000 {
        header_upstream Host {host}
    }
    proxy /login localhost:8000 {
        header_upstream Host {host}
    }
    proxy /logout localhost:8000 {
        header_upstream Host {host}
    }
    proxy /register localhost:8000 {
        header_upstream Host {host}
    }
    proxy /password/reset localhost:8000 {
        header_upstream Host {host}
    }
    proxy /password/email localhost:8000 {
        header_upstream Host {host}
    }
    proxy /laravel localhost:8000 {
        header_upstream Host {host}
    }
    proxy / localhost:8080 {
        header_upstream Host {host}
    }
}

localhost:8000 {
    root back-end/public
    fastcgi / 127.0.0.1:9000 php
    rewrite {
        to {path} {path}/ /index.php?{query}
    }
}